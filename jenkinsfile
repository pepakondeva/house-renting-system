pipeline {
    agent any

    tools {
        dotnet 'default configuration'
    }

    stages {
        stage('Restore dependencies') {
            steps {
                echo "Restoring .NET dependencies..."
                sh 'dotnet restore'
            }
        }

        stage('Run tests') {
            steps {
                echo "Running unit tests..."
                sh 'dotnet test --no-build --verbosity normal'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
    }
}
